/* NOTE: DP - one dimension
*  dp[n] = dp[n - 1] + dp[n - 2] // 1 step + 2 steps
*/

Link on LeetCode: https://leetcode.com/problems/climbing-stairs/description/

class Solution {
public:
    int climbStairs(int n) {
        int ways[n + 3];
        ways[1] = 1, ways[2] = 2;
        for (int i = 3; i <= n; i++)
            ways[i] = ways[i - 1] + ways[i - 2];
        return ways[n];
    }
};
